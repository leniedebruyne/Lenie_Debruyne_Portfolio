---
// index.astro
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import "../styles/styles.css";
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio Lenie Debruyne</title>
    <link rel="icon" type="image/x-icon" href="./favicon.svg" />
    <link rel="stylesheet" href="styles.css" />

    <!-- Cormorant Garamond -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Assistant:wght@200..800&family=Cormorant+Garamond:ital,wght@0,300..700;1,300..700&family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap"
      rel="stylesheet"
    />

    <!-- Noto Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Assistant:wght@200..800&family=Cormorant+Garamond:ital,wght@0,300..700;1,300..700&family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navigation />

    <!-- Hero -->
    <section class="hero">
      <div class="badges">
        <span class="badge motion">motion designer</span>
        <span class="badge ux">ux designer</span>
        <span class="badge visual">visual designer</span>
      </div>
      <h1>Portfolio</h1>
      <h2>Lenie Debruyne</h2>
    </section>

    <!-- Nav Strip -->
    <div class="strip">Let me introduce myself</div>

    <!-- About -->
    <section class="about">
      <img src="" alt="Foto van Lenie" />
      <div class="text">
        <h3>Hi! I’m Lenie,</h3>
        <p>
          <em
            >And I like design and experiences that feel intuitive & look
            amazing.</em
          >
        </p>
        <p>Ik ben in mijn 2de jaar Digital Design and Development...</p>
        <h4>My interests</h4>
        <div class="tags">
          <span>Digital products</span>
          <span>Photography</span>
          <span>Art</span>
        </div>
      </div>
    </section>

    <!-- Skills & Education -->
    <section class="skills-education">
      <div class="skills">
        <h4>My Skills</h4>
        <div class="icons">
          <!-- Vervang de src door je eigen iconen -->
          <img src="" alt="Illustrator" />
          <img src="" alt="Blender" />
          <img src="" alt="Photoshop" />
          <img src="" alt="After Effects" />
          <img src="" alt="Figma" />
          <img src="" alt="Framer" />
          <img src="" alt="Figjam" />
          <img src="" alt="Miro" />
        </div>
      </div>
      <div class="education">
        <h4>My education</h4>
        <ul>
          <li><strong>2017 - 2023:</strong> Creation and Fashion design</li>
          <li><strong>2023 - 2027:</strong> Digital Design and Development</li>
          <li><strong>2027 - ...:</strong> The next step</li>
        </ul>
      </div>
    </section>

    <!-- Welcome Message -->
    <section class="welcome">
      <h3>Hey, welcome to my portfolio!</h3>
      <p>Ik ben Lenie Debruyne...</p>
    </section>

    <!-- Coming Soon -->
    <section class="coming-soon">
      <h3>Some of the work I’m excited about</h3>
      <div class="coming-box">
        <h1>COMING SOON</h1>
        <div class="project-box">
          <h4>Passion Project</h4>
          <p>2025</p>
        </div>
      </div>
    </section>

    <!-- Moodboard -->
    <section class="moodboard">
      <h3>Mood board</h3>
      <p>#SettingTheVibe</p>
      <p>Ik maakte dit moodboard voor...</p>
      <div class="images">
        <img src="" alt="Mood image 1" />
        <img src="" alt="Mood image 2" />
        <img src="" alt="Mood image 3" />
        <img src="" alt="Mood image 4" />
        <img src="" alt="Mood image 5" />
        <img src="" alt="Mood image 6" />
        <img src="" alt="Mood image 7" />
        <img src="" alt="Mood image 8" />
      </div>
    </section>

    <!-- Footer -->
    <Footer />
  </body>
</html>
