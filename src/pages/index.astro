---
// index.astro
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import "../styles/styles.css";
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio Lenie Debruyne</title>
    <link rel="icon" type="image/x-icon" href="./favicon.svg" />
    <link rel="stylesheet" href="styles.css" />

    <!-- Cormorant Garamond -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Assistant:wght@200..800&family=Cormorant+Garamond:ital,wght@0,300..700;1,300..700&family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap"
      rel="stylesheet"
    />

    <!-- Noto Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Assistant:wght@200..800&family=Cormorant+Garamond:ital,wght@0,300..700;1,300..700&family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navigation />

    <!-- Hero -->
    <section class="hero">
      <div class="badges">
        <span class="badge motion">motion designer</span>
        <span class="badge ux">ux designer</span>
        <span class="badge visual">visual designer</span>
      </div>
      <h1>
        <img src="Header-P.svg" alt="P" class="p-tail" />
        ortfo<span class="highlight-l">l</span>io
      </h1>
      <h2>Lenie Debruyne</h2>
    </section>

    <!-- Nav Strip -->
    <div class="strip">
      <div class="strip-inner">
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>

        <!-- Herhaling -->
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
        <span class="repeat">Let me introduce myself</span>
      </div>
    </div>

    <section class="about">
      <img src="./photo_Lenie.png" alt="Foto van Lenie" width="308.6px" />
      <div class="about-text">
        <h3>Hi! I’m Lenie,</h3>
        <p>
          <em
            >And I like design and experiences that feel intuitive & look
            amazing.</em
          >
        </p>
        <p>
          I am in my 2nd year Digital Design and Development, where I learned
          how to <b>
            turn my creativity into functional and visually strong digital
            products
          </b>.
        </p>
        <p>
          I love to constantly <b> redefine my skills </b>, learning about my
          projects and always developping myself as a human.
        </p>
        <h4>My interests</h4>
        <div class="tags">
          <span class="highlight">Digital products</span>
          <span>Photography</span>
          <span>Art</span>
        </div>
      </div>
    </section>

    <!-- About -->
    <section class="skills-education">
      <!-- SKILLS -->
      <div class="skills">
        <h2 class="about-title">My Skills</h2>
        <div class="skills-grid">
          <div class="skill">
            <img src="./Illustrator.png" alt="Illustrator" />
            <div>
              <p>Illustrator</p>
              <div class="dots">
                <span class="filled"></span><span class="filled"></span><span
                  class="filled"></span>
              </div>
            </div>
          </div>

          <div class="skill">
            <img src="./blender.png" alt="Blender" />
            <div>
              <p>Blender</p>
              <div class="dots">
                <span class="filled"></span><span class="filled"></span><span
                ></span>
              </div>
            </div>
          </div>

          <div class="skill">
            <img src="./Photoshop.png" alt="Photoshop" />
            <div>
              <p>Photoshop</p>
              <div class="dots">
                <span class="filled"></span><span class="filled"></span><span
                ></span>
              </div>
            </div>
          </div>

          <div class="skill">
            <img src="./AfterEffects.png" alt="After Effects" />
            <div>
              <p>After Effects</p>
              <div class="dots">
                <span class="filled"></span><span class="filled"></span><span
                ></span>
              </div>
            </div>
          </div>

          <div class="skill">
            <img src="./Figma.png" alt="Figma" />
            <div>
              <p>Figma</p>
              <div class="dots">
                <span class="filled"></span><span class="filled"></span><span
                  class="filled"></span>
              </div>
            </div>
          </div>

          <div class="skill">
            <img src="./Fresco.png" alt="Fresco" />
            <div>
              <p>Fresco</p>
              <div class="dots">
                <span class="filled"></span><span class="filled"></span><span
                  class="filled"></span>
              </div>
            </div>
          </div>

          <div class="skill">
            <img src="./Figma.png" alt="Figjam" />
            <div>
              <p>Figjam</p>
              <div class="dots">
                <span class="filled"></span><span class="filled"></span><span
                ></span>
              </div>
            </div>
          </div>

          <div class="skill">
            <img src="./Miro.png" alt="Miro" />
            <div>
              <p>Miro</p>
              <div class="dots">
                <span class="filled"></span><span class="filled"></span><span
                  class="filled"></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- EDUCATION -->
      <div class="education">
        <h2 class="about-title">My education</h2>
        <div class="timeline">
          <div class="event">
            <p class="year">2017 - 2023</p>
            <div class="dot-line"></div>
            <p class="desc">Creation and Fashion design</p>
          </div>
          <div class="event">
            <p class="year">2023 - 2027</p>
            <div class="dot-line"></div>
            <p class="desc">Digital Design and Development</p>
          </div>
          <div class="event">
            <p class="year">2027 - ...</p>
            <div class="dot-line"></div>
            <p class="desc">The next step</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Welcome Message -->
    <div class="welcome--message">
      <section class="welcome">
        <h3>Hey, welcome to my portfolio!</h3>
        <p>
          I am Lenie Debruyne and I obtained a bachelor's degree in <b>
            Digital Design and Development</b
          >. From a young age my head was <b> full of creative ideas</b>, I was
          always making things, designing and experimenting. I wanted to use
          that creativity later <b> to help people </b>.
        </p>
      </section>
    </div>

    <div class="somming-soon--title-center">
      <h3 class="comming-soon-title">Some of the work I’m excited about</h3>
    </div>

    <!-- Coming Soon -->
    <section class="coming-soon">
      <div class="coming-box">
        <h1 class="coming-soon--banner">COMING SOON <br /> COMING SOON</h1>
        <div class="project-box">
          <h4>Passion <br> Project</h4>
          <p>2025</p>
        </div>
      </div>
    </section>

    <!-- Moodboard -->
    <section class="moodboard">
      <h3>Mood board</h3>
      <p>#SettingTheVibe</p>
      <p>Ik maakte dit moodboard voor...</p>
      <div class="images">
        <img src="" alt="Mood image 1" />
        <img src="" alt="Mood image 2" />
        <img src="" alt="Mood image 3" />
        <img src="" alt="Mood image 4" />
        <img src="" alt="Mood image 5" />
        <img src="" alt="Mood image 6" />
        <img src="" alt="Mood image 7" />
        <img src="" alt="Mood image 8" />
      </div>
    </section>

    <!-- Footer -->
    <Footer />
  </body>
</html>
